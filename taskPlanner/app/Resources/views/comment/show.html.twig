{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-4">
        <h1>Comment</h1>

        <table class="table" >
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            </tbody>
        </table>
                <a href="{{ path('comment_index') }}">Back to the Comment list</a> /
                <a href="{{ path('comment_edit', { 'id': comment.id }) }}">Edit Comment</a>

        {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}