{% extends 'base.html.twig' %}

{% block body %}
    <div  class="col-md-4">
        <h1>Category</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            </tbody>
        </table>


        <a href="{{ path('category_index') }}">Back to the Category list</a> /
        <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit Category</a>

        {{ form_start(delete_form) }}
            <input type="submit" value="Delete Category" class="btn btn-danger">
        {{ form_end(delete_form) }}

    </div>
{% endblock %}